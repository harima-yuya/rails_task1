<%= form_for(@post, url:{controller:"posts", action:"edit", id:@post.id}) do |form| %> 
    <table>
        <div class="form-group">
            <tr>
                <th><label for="title">タイトル</label></th>
                <td><%= form.text_field :title, {class:"form-control"} %></td>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <th><label for="start_date">開始日</label></th>
                <td><%= form.date_field :start_date,{class:"form-control"} %></td>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <th><label for="end_date">終了日</label></th>
                <td><%= form.date_field :end_date,{class:"form-control"} %></td>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <th><label for="all_day">終日</label></th>
                <td><%= form.check_box :all_day,{class:"form-control"} %><br>終日の場合はチェックを入れます</td>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <th><label for="memo">スケジュールメモ</label></th>
                <td><%= form.text_area :memo,{class:"form-control"}  %></td>
            </tr>
        </div>
    </table>
    <%= form.submit "スケジュールの編集を完了する" %>
<% end %>

<div class="link_at_edit">
    <p><a class="link" href="/posts">スケジュール一覧に戻る</a></p>
</div>